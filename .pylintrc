[MASTER]
jobs=1
persistent=yes

[MESSAGES CONTROL]
disable=
    missing-module-docstring,
    too-few-public-methods,
    too-many-arguments,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    too-many-instance-attributes,
    fixme

[REPORTS]
output-format=text
reports=no
score=yes

[BASIC]
good-names=i,j,k,x,y,w,h,id,df,gdf,_

[FORMAT]
max-line-length=100
indent-string='    '

[DESIGN]
max-args=7
max-attributes=10
max-locals=20

